<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Planner</title>
    <script src="https://kit.fontawesome.com/a4b8129466.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">
    <script src=__dirname + "/app.js">

    </script>
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous"> -->
  </head>
  <body>
    <section id="routePage">
      <header>
        <div class="actualDate">
          <h1><%= currentDateAndHour %></h1>
        </div>
      </header>
      <nav>

        <div class="menu">
          <div class="shortMenu">
          <a href="/work"> <div class="startSH iconItem"><i class="fas fa-shoe-prints"></i></div></a>
          <a href="/home">  <div class="listsSH iconItem"><i class="fas fa-clipboard-list"></i></div></a>
          <a href="/other">  <div class="settingsSH iconItem"><i class="fas fa-users-cog"></i></div></a>
          <a href="/about">  <div class="aboutSH iconItem"><i class="fas fa-address-card"></i></div></a>
          <a href="/contact">  <div class="contactSH iconItem"><i class="fas fa-file-signature"></i></div></a>
          <a href="/premium">  <div class="premiumSH iconItem"><i class="fas fa-grin-stars"></i></div></a>
          </div>
        </div>

        <div class="dailyTasksContainer">
          <div class="dayTask">
            <h1 style="font-size: 25px"><%= currentDate %></h1>
          </div>
          <div class="dayTask">
            To do task
          </div>
          <div class="dayTask">
            To do task
          </div>
          <div class="dayTask">
            To do task
          </div>
        </div>
      </nav>
      <main>
        <div class="tasksContainer">
          <div class="title">
            <h1><%= title %></h1>
          </div>

        <%  newItemsList.forEach(function(taskListItems){ %>
          <form action="/deleteTasks" method="post">

            <div class="task">
              <input type="color" value="#ffffff">
              <input type="checkbox" name="checked" value="<%= taskListItems._id %>" onChange="this.form.submit()">
              <p><%= taskListItems.name %></p>
            </div>
              <input type="hidden" name="listName" value="<%= title %>"></input>
          </form>
        <%  })  %>

          <form class="task" action="/" method="post">
            <input type="text" name="newTask" placeholder="Nowe zadanie">
            <button id="addButton" type="submit" name="listButton" value=<%= title %>>+</button>
          </form>
        </div>

      </main>
      <aside class="asideClass">
        <div class="meteorlogist">
          <!-- <p id="result"></p> -->
          <!-- <p id="demo">Meteor</p> -->
          <p id="weatherIcon"><img src=<%= icon %>></p>
          <p>Pogoda: <%= weather %></p>
          <p>Temperatura na zewnątrz: <%= outTemp %> °C</p>
          <p>Temperatura odczuwalna: <%= feelTemp %> °C</p>
          <p>Ciśnienie: <%= pressure %> hPa</p>
          <p>Wilgotność: <%= humidity %> %</p>
          <p>Prędkość wiatru: <%= windSpeed %> km/h</p>

        </div>

        <div class="calendar">
        <a href="/calendar"><i class="fas fa-calendar-alt" style="font-size: 120px"></i></a>
        </div>
      </aside>
      <footer>footer</footer>
    </section>
  </body>
</html>
